<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:clipToPadding="false"
            android:padding="12dp"            >


            <TextView
                android:id="@+id/txtDateofWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01999998" />

            <TextView
                android:id="@+id/txtTimeofWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Time"
                android:textSize="20sp"

                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDateofWork" />

            <TextView
                android:id="@+id/TotalEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Earning"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/titleTotalEarning"
                app:layout_constraintTop_toTopOf="@+id/titleTotalEarning" />

            <TextView
                android:id="@+id/titleTotalEarning"
                android:layout_width="104dp"
                android:layout_height="20dp"
                android:layout_marginTop="32dp"
                android:text="Total Earning: $"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTimeofWork"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="CompanyName"
                app:layout_constraintStart_toEndOf="@+id/title_txtCompanyName"
                app:layout_constraintTop_toTopOf="@+id/title_txtCompanyName" />

            <TextView
                android:id="@+id/title_txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Company:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTimeofWork" />

            <TextView
                android:id="@+id/txtHourlyRate"
                android:layout_width="76dp"
                android:layout_height="19dp"
                android:text="HourlyRate"
                app:layout_constraintStart_toEndOf="@+id/title_txtHourlyRate"
                app:layout_constraintTop_toTopOf="@+id/title_txtHourlyRate" />

            <TextView
                android:id="@+id/title_txtHourlyRate"
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Hourly Rate: $"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txtCompanyName" />

            <TextView
                android:id="@+id/txtTotalWorkHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Total Work Hours"
                app:layout_constraintStart_toEndOf="@+id/title_txtTotalWorkHours"
                app:layout_constraintTop_toTopOf="@+id/title_txtTotalWorkHours" />

            <TextView
                android:id="@+id/title_txtTotalWorkHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Total Hours: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txtHourlyRate" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>